{% extends 'admin/base.html.twig' %}

{% block body %}
	<div class="page-title">
		<h2>Gestion des livres</h2>
		<img src="{{ asset('img/child-book.svg') }}" alt="book">
	</div>

	<div class="tab-container">
		<div class="tabs">

			<a href="{{ path('book', {tab: 'search'}) }}" class="tab left-tab admin-tab search-tab {{ tab == 'search' ? 'active' : '' }}">
				<div class="tab-icon"></div><span class="tab-title">Chercher</span>
			</a>
			<a href="{{ path('book', {tab: 'new'}) }}" class="tab right-tab admin-tab new-tab {{ tab == 'new' ? 'active' : '' }}">
				<div class="tab-icon"></div><span class="tab-title">Ajouter</span>
			</a>
		</div>

		<div class="tab-content left-tab admin-tab search-tab {{ tab == 'search' ? 'active' : '' }}">
			{% if tab == 'search' %}
				{% include 'admin/book/search.html.twig' %}
			{% endif %}
		</div>

		<div class="tab-content right-tab admin-tab new-tab {{ tab == 'new' ? 'active' : '' }}">
			{% if tab == 'new' %}
				{% if successMessage is defined and successMessage is not null %}
					{% include "admin/book/success.html.twig" %}
				{% else %}
					{% include 'admin/book/new-book-form.html.twig' %}
				{% endif %}
			{% endif %}
		</div>
	</div>
{% endblock %}
