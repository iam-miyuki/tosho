{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<div class="change-form">
		<h4 class="name-container section-name blue">Réinitialiser votre mot de passe</h4>

		{{ form_start(requestForm) }}

		<div class="form-item reset-form">
			<p>Adresse e-mail : </p>
			<div class="item-field">
				{{ form_widget(requestForm.email, {'attr': {'class': 'form-field'}}) }}
			</div>
		</div>

		<div>
			<small>
				Saisissez votre adresse e-mail et nous vous enverrons un lien
				            pour réinitialiser votre mot de passe.
			</small>
		</div>

		<button class="btn btn-primary">Envoyer le lien de réinitialisation</button>
	</div>
	{{ form_end(requestForm) }}
{% endblock %}
