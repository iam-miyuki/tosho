{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="change-form">
			<h4 class="name-container section-name blue">Réinitialiser votre mot de passe</h4>
    

    {{ form_start(resetForm) }}

    <div class="form-item reset-form">
        <p>Nouveau mot de passe</p>
        <div class="item-field">
            {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-field'}}) }}
        </div>
    </div>

    <button class="btn btn-primary">Réinitialiser le mot de passe</button>
</div>
    {{ form_end(resetForm) }}
{% endblock %}
